<div class="bg-dark text-light">
  <% if current_user %>
    <a href="/rooms" class="btn btn-primary mx-2 my-2" role="button">Start Chatting</a>
    <%# <%= image_tag(current_user.avatar_thumbnail) %> %>
    <%= button_to "Logout", destroy_user_session_path, class: 'btn btn-primary mx-2 my-2', method: :delete %>
    <%= link_to "Edit Account", edit_user_registration_path, class: 'btn btn-success mx-2 my-2' %>
  <% else %>
    <%= link_to "Login", new_user_session_path, class: 'btn btn-primary mx-2 my-2' %>
    <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary mx-2 my-2' %>
  <% end %>
</div>